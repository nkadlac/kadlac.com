---
interface Props {
  bgSaturated?: boolean;
}

const { bgSaturated = false } = Astro.props;

const navLinks = [
  { href: '/about', label: 'Start Here' },
  { href: '/articles', label: 'Writing' },
];

const learnProducts = [
  {
    title: 'The Perfect Personal Website',
    description: 'Build a website that creates serendipity',
    badge: 'COMING SOON',
    href: '/courses/personal-website',
    image: '/images/product-website.webp',
    comingSoon: true,
  },
  {
    title: 'The Creator Design Kit',
    description: 'Learn design and build your own visual design kit',
    badge: 'LOVED BY 250+ CREATORS',
    href: 'https://www.approachabledesign.co/products/creator-design-kit/',
    image: '/images/product-design-kit.webp',
    external: true,
  },
  {
    title: "Writers' Draw",
    description: 'Draw visual stories using Procreate (for beginners)',
    badge: 'LOVED BY 75+ WRITERS',
    href: 'https://writersdraw.com',
    image: '/images/product-writers-draw.webp',
    external: true,
  },
  {
    title: 'The Design Vault',
    description: 'Get inspired by over 170+ beautiful websites',
    badge: 'LOVED BY 50+ CREATORS',
    href: 'https://www.approachabledesign.co/products/design-vault/',
    image: '/images/product-design-vault.webp',
    external: true,
  },
];

const currentPath = Astro.url.pathname;
---

<header id="main-header" class:list={["sticky top-0 z-50 backdrop-blur-sm border-b border-brand-brown", bgSaturated ? "bg-brand-yellow/95" : "bg-brand-cream/95"]}>
  <div class="max-w-[1200px] mx-auto px-6 py-4">
    <nav class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 hover:opacity-70 transition-opacity">
        <img
          src="/images/nate-profile.avif"
          alt="Nate Kadlac"
          class="w-10 h-10 md:w-12 md:h-12 rounded-full object-cover border-2 border-brand-brown"
        />
        <div>
          <img src="/logo.svg" alt="Nate Kadlac" class="h-5 md:h-6" />
          <span class="block text-[10px] md:text-xs tracking-widest uppercase text-brand-brown/70 mt-1">
            Designer, Writer, & Instructor
          </span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-2">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              "font-heading text-[15px] font-medium px-4 py-2 rounded-full hover:bg-white/40 transition-colors text-center whitespace-nowrap",
              currentPath.startsWith(link.href) ? "bg-white" : ""
            ]}
          >
            {link.label}
          </a>
        ))}

        <!-- Learn to Create Dropdown -->
        <div class="relative" id="learn-dropdown">
          <button
            class="font-heading text-[15px] font-medium px-4 py-2 rounded-full hover:bg-white/40 transition-colors flex items-center gap-1 whitespace-nowrap"
            id="learn-dropdown-toggle"
            aria-expanded="false"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
            Learn to Create
          </button>

          <!-- Dropdown Panel -->
          <div
            id="learn-dropdown-panel"
            class="absolute top-full right-0 mt-4 w-[580px] bg-white rounded-2xl shadow-xl p-6 hidden opacity-0 transition-opacity duration-200"
          >
            <div class="grid grid-cols-2 gap-6">
              {learnProducts.map((product) => (
                <a
                  href={product.href}
                  target={product.external ? '_blank' : undefined}
                  rel={product.external ? 'noopener noreferrer' : undefined}
                  class="group block"
                >
                  <!-- Product Image -->
                  <div class="aspect-[4/3] bg-brand-cream rounded-xl overflow-hidden mb-3 relative">
                    <img
                      src={product.image}
                      alt={product.title}
                      class="w-full h-full object-cover"
                    />
                  </div>

                  <!-- Product Info -->
                  <h3 class="font-heading font-bold text-brand-brown group-hover:opacity-70 transition-opacity">
                    {product.title}
                  </h3>
                  <p class="text-sm text-brand-brown/70 mt-1">
                    {product.description}
                  </p>
                  <p class="text-xs text-brand-brown/50 uppercase tracking-wider mt-2">
                    {product.badge}
                  </p>
                </a>
              ))}
            </div>
          </div>
        </div>

        <a
          href="/hire"
          class:list={[
            "font-heading text-[15px] font-medium px-4 py-2 rounded-full hover:bg-white/40 transition-colors whitespace-nowrap",
            currentPath.startsWith('/hire') ? "bg-white" : ""
          ]}
        >
          Work With Me
        </a>

        <a href="/my" class="font-heading text-[15px] font-medium px-4 py-2 rounded-full bg-brand-brown text-white hover:bg-brand-brown/90 transition-colors whitespace-nowrap">
          My Free Toolkit
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-toggle"
        class="lg:hidden p-2 -mr-2"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6 hamburger-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg class="w-6 h-6 close-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </nav>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden lg:hidden pt-6 pb-4" style="background-color: #FDFDF9;">
      <div class="flex flex-col gap-6">
        <a href="/about" class="font-heading text-2xl font-bold">
          Start Here
        </a>

        <a href="/articles" class="font-heading text-2xl font-bold">
          Writing
        </a>

        <!-- Courses section with sub-items -->
        <div>
          <p class="font-heading text-2xl font-bold mb-4">Courses</p>
          <div class="pl-4 flex flex-col gap-4">
            {learnProducts.filter(p => !p.comingSoon).map((product) => (
              <a
                href={product.href}
                target={product.external ? '_blank' : undefined}
                rel={product.external ? 'noopener noreferrer' : undefined}
                class="font-heading text-xl font-bold text-brand-brown"
              >
                {product.title}
              </a>
            ))}
          </div>
        </div>

        <a href="/hire" class="font-heading text-2xl font-bold">
          Work With Me
        </a>

        <a href="/newsletter" class="font-heading text-2xl font-bold">
          Newsletter
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  function initHeader() {
    // Mobile menu toggle
    const toggle = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');
    const header = document.getElementById('main-header');
    const hamburger = toggle?.querySelector('.hamburger-icon');
    const closeIcon = toggle?.querySelector('.close-icon');

    toggle?.addEventListener('click', () => {
      const isOpen = menu?.classList.contains('hidden');
      menu?.classList.toggle('hidden');
      hamburger?.classList.toggle('hidden');
      closeIcon?.classList.toggle('hidden');
      toggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');

      // Toggle header background when menu opens/closes
      if (isOpen) {
        header?.style.setProperty('background-color', '#FDFDF9');
      } else {
        header?.style.removeProperty('background-color');
      }
    });

    // Learn dropdown toggle
    const dropdownToggle = document.getElementById('learn-dropdown-toggle');
    const dropdownPanel = document.getElementById('learn-dropdown-panel');
    const dropdown = document.getElementById('learn-dropdown');

    let isOpen = false;
    let closeTimeout: ReturnType<typeof setTimeout> | null = null;

    function openDropdown() {
      if (closeTimeout) {
        clearTimeout(closeTimeout);
        closeTimeout = null;
      }
      if (!isOpen) {
        dropdownPanel?.classList.remove('hidden');
        setTimeout(() => {
          dropdownPanel?.classList.remove('opacity-0');
        }, 10);
        dropdownToggle?.setAttribute('aria-expanded', 'true');
        isOpen = true;
      }
    }

    function closeDropdown() {
      if (isOpen) {
        dropdownPanel?.classList.add('opacity-0');
        setTimeout(() => {
          dropdownPanel?.classList.add('hidden');
        }, 200);
        dropdownToggle?.setAttribute('aria-expanded', 'false');
        isOpen = false;
      }
    }

    function scheduleClose() {
      closeTimeout = setTimeout(() => {
        closeDropdown();
      }, 150);
    }

    // Open on hover
    dropdown?.addEventListener('mouseenter', openDropdown);
    dropdown?.addEventListener('mouseleave', scheduleClose);

    // Toggle on click (for accessibility)
    dropdownToggle?.addEventListener('click', (e) => {
      e.stopPropagation();
      if (isOpen) {
        closeDropdown();
      } else {
        openDropdown();
      }
    });

    // Close on click outside
    document.addEventListener('click', (e) => {
      if (!dropdown?.contains(e.target as Node)) {
        closeDropdown();
      }
    });

    // Close on escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeDropdown();
      }
    });
  }

  // Run on initial load and after View Transitions
  initHeader();
  document.addEventListener('astro:after-swap', initHeader);
</script>
