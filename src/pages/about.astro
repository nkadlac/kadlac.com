---
import Layout from '../layouts/Layout.astro';

const socialLinks = [
  { label: 'X (Twitter)', url: 'https://twitter.com/kadlac', icon: 'x' },
  { label: 'LinkedIn', url: 'https://linkedin.com/in/kadlac', icon: 'linkedin' },
  { label: 'YouTube', url: 'https://youtube.com/@natekadlac', icon: 'youtube' },
];

const guestAppearances = [
  { show: 'The Futur', episode: 'Design for Non-Designers' },
  { show: 'Creator Science', episode: 'Building in Public' },
  { show: 'Design Matters', episode: 'Approachable Design' },
];
---

<Layout title="About Nate Kadlac" description="Nate Kadlac is a writer, instructor, and digital designer. He is known for working as a brand and product designer for 20+ years, and now writes a weekly newsletter and partners with creators.">
  <section class="max-w-[1200px] mx-auto px-6 py-16 md:py-24">
    <!-- Hero Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 mb-20">
      <div>
        <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
          It's about time we met.
        </h1>
        <p class="mt-6 text-xl text-brand-brown/70">
          I'm Nate Kadlac — a designer, writer, and instructor helping non-designers make better design decisions.
        </p>

        <!-- Social Links -->
        <div class="flex gap-4 mt-8">
          {socialLinks.map(link => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="p-3 bg-brand-cream rounded-full hover:bg-brand-brown hover:text-brand-yellow transition-colors"
              aria-label={link.label}
            >
              {link.icon === 'x' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                </svg>
              )}
              {link.icon === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                </svg>
              )}
              {link.icon === 'youtube' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Image Placeholder -->
      <div class="aspect-square bg-brand-cream rounded-2xl flex items-center justify-center text-brand-brown/30">
        [Profile Image]
      </div>
    </div>

    <!-- Guest Appearances -->
    <div class="mb-20">
      <h2 class="font-heading text-2xl font-semibold mb-8">
        Guest Appearances
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {guestAppearances.map(appearance => (
          <div class="card">
            <p class="text-sm text-brand-brown/50 uppercase tracking-wider font-medium">
              {appearance.show}
            </p>
            <p class="font-heading font-semibold mt-2">
              {appearance.episode}
            </p>
          </div>
        ))}
      </div>
    </div>

    <!-- Bio Section -->
    <div class="max-w-3xl">
      <h2 class="font-heading text-2xl font-semibold mb-6">
        The full story
      </h2>
      <div class="prose text-brand-brown/80">
        <p>
          After spending seven years building a real estate tech startup into an eight-figure acquisition,
          I left my role as Creative Director and founding designer to focus on what I love most:
          helping non-designers make better design decisions.
        </p>
        <p>
          Today, I run Approachable Design, write a newsletter read by thousands of creative entrepreneurs,
          and partner with businesses on branding and product design projects.
        </p>
        <p>
          I believe the ability to communicate visually, tell stories with copy, and connect through
          branding should be approachable to everyone — not just those with formal design training.
        </p>
      </div>
    </div>
  </section>
</Layout>
