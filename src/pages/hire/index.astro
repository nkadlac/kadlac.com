---
import Layout from '../../layouts/Layout.astro';
import LogoMarquee from '../../components/LogoMarquee.astro';
import { getCollection } from 'astro:content';

const clients = [
  'Minnesota Public Radio',
  'HomeSpotter',
  'Best Buy',
  'Target',
  'Lenny Rachitsky',
  'Rad Reads',
  'WHCC',
  'Conrad Hilton',
];

const services = [
  {
    tagline: "I'm embarrassed by my brand.",
    name: 'Brand Teardown',
    duration: '60 minutes',
    price: '$750',
    description: 'Teardown of your brand and its components (website, social channels, and content) with an audit and design recommendations.',
    cta: 'Book Teardown',
    ctaUrl: '#apply',
  },
  {
    tagline: 'I need a design partner.',
    name: 'Design Partnership',
    duration: 'Ongoing',
    price: '$5,000/mo',
    description: 'For businesses earning $500k+ annually. I bridge the communication gap between you and your design team as your dedicated design partner.',
    cta: 'Book a Discovery Call',
    ctaUrl: 'https://cal.com/kadlac/discovery-call',
  },
  {
    tagline: 'I need help with something new.',
    name: 'Custom Projects',
    duration: 'Project-based',
    price: '$15kâ€“50k',
    description: 'Website or product design challenges. Let\'s start with a free 30-minute consultation to see if we\'re a good fit.',
    cta: 'Get in Touch',
    ctaUrl: '#apply',
  },
];

// Get featured projects
const projects = await getCollection('projects');
const featuredProjects = projects.slice(0, 4);
---

<Layout title="Work With Nate Kadlac | Design Partnership" description="Hire Nate Kadlac as your design partner. Brand teardowns, ongoing creative direction, and custom projects for businesses ready to stand out.">
  <!-- Hero Section -->
  <section class="max-w-[1200px] mx-auto px-6 py-16 md:py-24">
    <header class="max-w-[900px] mx-auto">
      <p class="text-sm text-brand-brown/60 uppercase tracking-wider font-medium mb-6 text-center">
        Your Independent Design Partner
      </p>
      <h1 class="font-heading font-medium leading-[1.05] mb-12 text-center" style="font-size: clamp(2.5rem, 8vw, 6rem);">
        FROM STANDING STILL TO STANDING OUT
      </h1>
      <div class="space-y-6 text-brand-brown/80">
        <p>Building a brand is like building a home.</p>
        <p>Right now, you could walk into Home Depot and buy the tools and the hardware you need to build an entire home.</p>
        <p>Maybe you decide to do it yourself?</p>
        <p>You'll earn the experience of knowing what it takes to create something unique and personal, making all of the same mistakes every DIYer will eventually make.</p>
        <p>Or you could hire a builder, and an architect.</p>
        <p>The ones who know where the bumps are, where you'll waste money, and what to avoid.</p>
        <p>137,000 new companies are launched every day.</p>
        <p>1.4 million houses are built.</p>
        <p>If you have more time than money, you should consider learning it yourself.</p>
        <p>If you have less time, let's chat about how we can quickly build your house brand.</p>
      </div>
      <a
        href="#apply"
        class="btn btn-primary mt-10 inline-block"
      >
        Tell me about your project
      </a>
    </header>
  </section>

  <!-- Logo Marquee -->
  <LogoMarquee />

  <!-- Services Section -->
  <section class="max-w-[1200px] mx-auto px-6 py-16">

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-20">
      {services.map(service => (
        <div class="card flex flex-col">
          <p class="font-serif text-lg italic text-brand-brown/70 mb-2">
            "{service.tagline}"
          </p>
          <h3 class="font-heading text-xl font-semibold">
            {service.name}
          </h3>
          <p class="text-sm text-brand-brown/50 mt-1">
            {service.duration}
          </p>
          <p class="font-heading text-3xl font-bold mt-4 text-brand-brown">
            {service.price}
          </p>
          <p class="mt-4 text-brand-brown/70 flex-1">
            {service.description}
          </p>
          <a
            href={service.ctaUrl}
            {...(service.ctaUrl.startsWith('#') ? {} : { target: '_blank', rel: 'noopener noreferrer' })}
            class="btn btn-primary mt-6 w-full"
          >
            {service.cta}
          </a>
        </div>
      ))}
    </div>

  </section>

  <!-- Apply Section -->
  <section id="apply" class="py-16 md:py-24" style="background-color: #FDFDF9;">
    <div class="max-w-[1200px] mx-auto px-6">
      <h2 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold leading-[1.05] mb-6 text-center">
        APPLY TO GET STARTED
      </h2>
      <p class="text-center text-lg md:text-xl text-brand-brown/80 max-w-xl mx-auto mb-10">
        Send me an email with a brief description of your project and budget, and we'll hop on a quick call to see if we're the right partners.
      </p>
      <div class="bg-brand-cream rounded-3xl p-8 md:p-12 border-2 border-brand-brown max-w-3xl mx-auto">
      <div class="max-w-2xl">
        <h2 class="font-heading text-2xl md:text-3xl font-bold leading-[1.1] mb-8">
          Thanks for your interest
        </h2>
        <form
          action="https://formspree.io/f/mlgdzgag"
          method="POST"
          class="space-y-6"
        >
          <input type="hidden" name="_next" value="https://www.kadlac.com/hire/thanks" />
          <div>
            <label for="name" class="block text-sm font-bold text-brand-brown mb-2">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Jane Smith"
              required
              class="w-full px-5 py-4 rounded-xl bg-white text-brand-brown placeholder:text-brand-brown/40 focus:outline-none focus:ring-2 focus:ring-brand-brown/20"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-bold text-brand-brown mb-2">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="Your best email"
              required
              class="w-full px-5 py-4 rounded-xl bg-white text-brand-brown placeholder:text-brand-brown/40 focus:outline-none focus:ring-2 focus:ring-brand-brown/20"
            />
          </div>
          <div>
            <label for="website" class="block text-sm font-bold text-brand-brown mb-2">Website URL</label>
            <input
              type="url"
              id="website"
              name="website"
              placeholder="https://yourdomain.com"
              class="w-full px-5 py-4 rounded-xl bg-white text-brand-brown placeholder:text-brand-brown/40 focus:outline-none focus:ring-2 focus:ring-brand-brown/20"
            />
          </div>
          <div>
            <label for="project" class="block text-sm font-bold text-brand-brown mb-2">Tell me about your project. Engagements from $13k</label>
            <textarea
              id="project"
              name="project"
              rows="4"
              placeholder="Hey Nate, I have a project to discuss. Here are the brief details like scope, budget, and timing."
              required
              class="w-full px-5 py-4 rounded-xl bg-white text-brand-brown placeholder:text-brand-brown/40 focus:outline-none focus:ring-2 focus:ring-brand-brown/20 resize-none"
            ></textarea>
          </div>
          <div class="flex flex-col sm:flex-row sm:items-center gap-4">
            <button
              type="submit"
              class="btn btn-primary"
            >
              Submit Project Details
            </button>
            <span class="text-brand-brown/60 text-sm">I'll respond in one weekday</span>
          </div>
        </form>
      </div>
      </div>
    </div>
  </section>

  <!-- Featured Work -->
  <section class="max-w-[1200px] mx-auto px-6 py-16">
    {featuredProjects.length > 0 && (
      <div>
        <h2 class="font-heading text-2xl md:text-3xl font-medium leading-[1.1] mb-8">
          FEATURED WORK
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {featuredProjects.map(project => (
            <a href={`/projects/${project.slug}`} class="group block">
              {project.data.coverImage && (
                <div class="aspect-[4/3] rounded-2xl overflow-hidden mb-4">
                  <img
                    src={project.data.coverImage}
                    alt={project.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                </div>
              )}
              <h3 class="font-heading font-semibold group-hover:opacity-70 transition-opacity">
                {project.data.title}
              </h3>
            </a>
          ))}
        </div>
      </div>
    )}
  </section>
</Layout>
