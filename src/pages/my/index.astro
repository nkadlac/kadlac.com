---
import Layout from '../../layouts/Layout.astro';

const testimonials = [
  {
    quote: "You helped me find my next note taking app!",
    author: "Lumi"
  },
  {
    quote: "There are some hidden gems in here!",
    author: "Rob Roseman",
    link: { url: "https://wtfdivorce.com", label: "WTF Divorce" }
  }
];
---

<Layout title="My Creative Toolkit | Nate Kadlac" description="Get my free toolkit of 59+ resources that will help you learn, create, and sell online.">
  <section class="max-w-[1200px] mx-auto px-6 py-16 md:py-24">
    <div class="grid grid-cols-1 lg:grid-cols-[1fr_auto] gap-12 lg:gap-8 items-center">
      <!-- Left Column -->
      <div>
        <!-- Badge -->
        <span class="inline-block bg-brand-brown text-brand-yellow font-heading font-semibold text-sm uppercase tracking-wider px-4 py-2 rounded-full mb-6">
          My Creative Toolkit
        </span>

        <!-- Headline -->
        <h1 class="font-heading font-medium leading-[1.05]" style="font-size: clamp(2.5rem, 11vw, 4rem);">
          <span class="whitespace-nowrap">LEARN, CREATE,</span><br /><span class="whitespace-nowrap">AND SELL ONLINE</span>
        </h1>

        <!-- Body -->
        <p class="mt-6 text-xl text-brand-brown/80">
          Get my free toolkit of 59+ resources that will help you learn, create, and sell online.
        </p>

        <!-- Email Signup Form - Stacked on Mobile, Inline on Desktop -->
        <div class="mt-8">
          <!-- Mobile: Stacked -->
          <form
            action="https://app.kit.com/forms/7493879/subscriptions"
            method="post"
            data-sv-form="7493879"
            data-uid="7493879"
            data-format="inline"
            data-version="5"
            data-options='{"settings":{"after_subscribe":{"action":"redirect","redirect_url":"https://www.kadlac.com/my/in"}}}'
            class="newsletter-form md:hidden bg-white rounded-2xl p-6 flex flex-col gap-3 max-w-lg"
          >
            <input
              type="email"
              name="email_address"
              placeholder="Drop your best email address"
              required
              aria-label="Email address"
              class="w-full px-5 py-4 bg-[#f5f5f5] rounded-xl text-brand-brown placeholder:text-brand-brown/40 focus:outline-none text-base"
            />
            <button
              type="submit"
              class="w-full px-6 py-4 rounded-xl bg-brand-brown text-white font-heading font-semibold text-base hover:opacity-90 transition-opacity"
            >
              Get My Free Toolkit
            </button>
          </form>
          <!-- Desktop: Inline Pill -->
          <form
            action="https://app.kit.com/forms/7493879/subscriptions"
            method="post"
            data-sv-form="7493879"
            data-uid="7493879"
            data-format="inline"
            data-version="5"
            data-options='{"settings":{"after_subscribe":{"action":"redirect","redirect_url":"https://www.kadlac.com/my/in"}}}'
            class="newsletter-form hidden md:flex bg-white rounded-full p-2 items-center gap-2 max-w-lg"
          >
            <input
              type="email"
              name="email_address"
              placeholder="Drop your best email address"
              required
              aria-label="Email address"
              class="flex-1 px-5 py-3 bg-transparent text-brand-brown placeholder:text-brand-brown/40 focus:outline-none text-base"
            />
            <button
              type="submit"
              class="px-6 py-3 rounded-full bg-brand-brown text-white font-heading font-semibold text-base hover:opacity-90 transition-opacity whitespace-nowrap"
            >
              Get My Free Toolkit
            </button>
          </form>
        </div>

        <!-- Testimonials -->
        <div class="mt-10 space-y-4">
          {testimonials.map(testimonial => (
            <div>
              <div class="flex gap-1 mb-1">
                {[...Array(5)].map(() => (
                  <span class="text-brand-brown">★</span>
                ))}
              </div>
              <p class="text-brand-brown/80">
                "{testimonial.quote}" —{testimonial.author}{testimonial.link && (
                  <span>, <a href={testimonial.link.url} target="_blank" rel="noopener noreferrer" class="underline hover:opacity-70">{testimonial.link.label}</a></span>
                )}
              </p>
            </div>
          ))}
        </div>
      </div>

      <!-- Phone Mockup - Below content on mobile, right column on desktop -->
      <div class="flex justify-center items-center lg:order-none order-last mt-8 lg:mt-0">
        <img
          src="/images/toolkit-mockup.avif"
          alt="Nate's Toolkit on phone"
          class="max-h-[300px] lg:max-h-[600px] w-auto"
        />
      </div>
    </div>

      </section>
</Layout>
